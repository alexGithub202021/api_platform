{% extends 'base.html.twig' %}

{% block title %}Office index
{% endblock %}

{% block body %}
	<h1>Office List</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Idoffice</th>
				<th>City</th>
				<th>Manager</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for office in offices %}
				<tr>
					<td>{{ office.idoffice }}</td>
					<td>{{ office.city }}</td>
					<td>{{ office.manager }}</td>
					<td>
						<a href="{{ path('office_show', {'idoffice': office.idoffice}) }}">show</a>
						<a href="{{ path('office_edit', {'idoffice': office.idoffice}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('office_new') }}">Create new</a>
{% endblock %}


{% block stylesheets %}
	<style>
		h1 {
			color: orange;
		}

		table {
			border: solid 1px black;
			width: 30%;
			border-radius: 7px;
		}

		tr:hover {
			background-color: rgb(193, 226, 211);
		}

		td {
			padding-left: 5px;
		}

		thead {
			font-weight: bold;
			background-color: #fff8b3;
		}

		a:hover {
			font-style: italic;
			color: orange;
		}

		span {
			padding-left: 5px;
		}

		.div_tr {
			height: 6px;
		}

		.td_actions {
			width: 15%;
		}
	</style>
{% endblock %}
